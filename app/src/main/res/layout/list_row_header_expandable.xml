<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDistrictName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imgPic"
        android:text="@string/tphcm"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnChoosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/colorGrayButtonWhere"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:text="@string/duong"
        android:textColor="@color/colorTextButtonWhere"
        tools:ignore="RelativeOverlap" />
</RelativeLayout>