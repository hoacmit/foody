<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    tools:context="hoa14110071.chieuthusau.foodyversion1.Fragment.fragmentWhere_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_avg_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_circle_textview"
            android:gravity="center"
            android:padding="5dp"
            android:text="8.3"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_one_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Something here"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_address_one_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="something here"
                android:textColor="@color/colorGray" />
        </LinearLayout>


    </LinearLayout>

    <VideoView
        android:id="@+id/video_one_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_one_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_img_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_oder_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/colorRed"
        android:drawableTop="@drawable/img_order"
        android:padding="5dp"
        android:text="@string/datmuahang"
        android:textColor="@color/colorWhite" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_list_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="5dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:padding="0dp" />

        <Button
            android:id="@+id/btn_count_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
            android:drawablePadding="-40dp"
            android:drawableTint="@color/colorGray"
            android:text="3" />

        <Button
            android:id="@+id/btn_count_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
            android:drawablePadding="-40dp"
            android:drawableTint="@color/colorGray"
            android:text="3" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:padding="0dp" />

        <TextView
            android:id="@+id/txt_state_one_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/icon_open"
            android:gravity="center"
            android:text="Đang mở cửa" />
    </LinearLayout>
</LinearLayout>
